<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/backgroundGray"
  android:orientation="vertical"
  tools:context=".PreviewEditActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/previewRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="116dp"
      android:background="@android:color/white"
      android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
      android:id="@+id/previewLoadingProgressBar"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white"
      android:orientation="horizontal">

      <Button
        android:id="@+id/buttonSaveAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:drawableTop="@drawable/ic_save_black_48dp"
        android:paddingTop="4dp"
        android:text="@string/action_saveall_title"
        android:textSize="12sp" />

      <Button
        android:id="@+id/buttonCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:drawableTop="@drawable/ic_crop_rotate_black_48dp"
        android:paddingTop="4dp"
        android:text="@string/action_crop_title"
        android:textSize="12sp" />

      <Button
        android:id="@+id/buttonStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:drawableTop="@drawable/ic_attach_file_black_48dp"
        android:paddingTop="4dp"
        android:text="@string/action_stamp_title"
        android:textSize="12sp" />

      <Button
        android:id="@+id/buttonEmoticon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:drawableTop="@drawable/ic_insert_emoticon_black_48dp"
        android:paddingTop="4dp"
        android:text="@string/action_sticker_title"
        android:textSize="12sp" />

      <Button
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:drawableTop="@drawable/ic_delete_black_48dp"
        android:paddingTop="4dp"
        android:text="@string/action_delete_title"
        android:textSize="12sp" />
    </LinearLayout>

    <TextView
      android:id="@+id/canvasviewHintTextView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white"
      android:gravity="left|center"
      android:inputType="textMultiLine"
      android:padding="16dp"
      android:text="@string/canvasview_hint"
      android:textColor="@color/colorAccent"
      android:textSize="14sp" />

    <LinearLayout
      android:id="@+id/canvasParentLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="8dp"
      android:background="@android:color/white"
      android:orientation="vertical">

    </LinearLayout>

  </LinearLayout>

</LinearLayout>